{% extends "template.html.twig" %}
{% block body %}
    <nav class="navbar navbar-default navbar-inverse navbar-collapse navbar-md">
        <div class="container-fluid">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
            </div>
            <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
                <ul class="nav navbar-nav">
                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false"><i class="glyphicon glyphicon-th-list"></i> Les tables <span class="caret"></span></a>
                        <ul class="dropdown-menu">
                            {% for oneTable in tables %}
                                <li><a href="index.php?run=showTableStruct&dbname={{ dbname }}&tName={{ oneTable['table_name'] }}">{{ oneTable['table_name'] }}</a></li>
                            {% endfor %}
                        </ul>
                    </li>
                    <li class="active"><a href="#showInfo">Structure <span class="sr-only">(current)</span></a></li>
                    <li><a href="#makeQuery"><i class="glyphicon glyphicon-edit"></i> Faire une requête</a></li>
                </ul>
                <ul class="nav navbar-nav navbar-right">
                    <li><a href="#menu-toggle" id="menu-toggle"><i class="glyphicon glyphicon-menu-hamburger"></i></a></li>
                </ul>
            </div>
        </div>
    </nav>
    <div class="container-fluid">
        <div class="row noShow" id="makeQuery">
            <form id="Query" method="POST" action="" class="form-group">
                <div class="panel panel-info panel-full">

                    <div class="panel-heading">
                        <h3 class="panel-title">Faire une requête</h3>
                    </div>
                    <div class="panel-body">
                <textarea name="query" rows="10" class="form-control">

                </textarea>
                    </div>
                    <div class="panel-footer text-right">
                        <input type="submit" class="btn btn-success">
                        <input type="reset" class="btn btn-danger">
                    </div>

                </div>
            </form>
        </div>

        <div class="row" id="showInfo">
            <div class="panel panel-info panel-full">
                <div class="panel-heading">
                    <h3 class="panel-title">INFORMATION SUR LA BASE <span id="database_name">{{ dbname }}</span></h3>
                </div>
                <div class="panel-body" id="panel_body">
                    <button class="btn btn-success btn-sm btn-add-table"><i class="glyphicon glyphicon-plus-sign"></i> Ajouter une table</button>
                    <button class="btn btn-danger btn-sm btn-delete-db"><i class="glyphicon glyphicon-trash"></i> Supprimer la base</button>
                    <button class="btn btn-primary btn-sm btn-rename"><i class="glyphicon glyphicon-edit"></i> Renommer la base</button>
                    <div class="marginTop20">
                    <table class="table table-striped table-bordered table-responsive tableaux">
                        <thead>
                        <tr>
                            <th>Nom de la table</th>
                            <th>Nombre de lignes</th>
                            <th>Taille</th>
                            <th>Afficher</th>
                            <th>Structure</th>
                            <th>Insérer</th>
                            <th>Supprimer</th>
                        </tr>
                        </thead>
                        <tbody>
                        {% for oneTable in tables %}
                            <tr>
                                <td>
                                    <a href="index.php?run=showTableStruct&dbname={{ dbname }}&tName={{ oneTable['table_name'] }}">{{ oneTable['table_name'] }}</a>
                                </td>
                                <td>
                                    {{ oneTable['table_rows'] }}
                                </td>
                                <td>
                                    {{ oneTable['data_length'] / 1024   | round(1,'floor') }} Ko
                                </td>
                                <td>
                                    <a class="btn btn-info full-width" href="index.php?run=content_table&dbname={{ dbname }}&t_name={{ oneTable['table_name'] }}"><i class="glyphicon glyphicon-list-alt"></i></a>
                                </td>
                                <td>
                                    <a class="btn btn-primary full-width" href="index.php?run=showTableStruct&dbname={{ dbname }}&tName={{ oneTable['table_name'] }}"><i class="glyphicon glyphicon-list-alt"></i><i class="glyphicon glyphicon-resize-horizontal"></i><i class="glyphicon glyphicon-list-alt"></i></a>
                                </td>
                                <td>
                                    <a class="btn btn-default full-width" ><i class="glyphicon glyphicon-list-alt"></i><i class="glyphicon glyphicon-arrow-left"></i></a>
                                </td>
                                <td>
                                    <a class="btn btn-danger full-width btn-delete-table" name="{{ oneTable['table_name'] }}"><i class="glyphicon glyphicon-trash"></i></a>
                                    <div class="modal fade"  data-backdrop="static" data-keyboard="false"  id="modal_delete_table" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
                                        <div class="modal-dialog" role="document">
                                            <div class="modal-content">
                                                <div class="modal-header">
                                                    <h4 class="modal-title myModalLabel">Confirmation <i class="glyphicon glyphicon-question-sign"></i></h4>
                                                </div>
                                                <form method="POST" action="" class="form_delete_table">
                                                    <div class="modal-body">
                                                        Vous voulez vraiment suprimer <span class="text-info"></span> ?
                                                    </div>
                                                    <div class="modal-footer">
                                                        <input type="hidden" name="table_name_delete">
                                                        <input type="hidden" name="name_db" value="{{ dbname }}">
                                                        <button type="button" class="btn btn-danger" data-dismiss="modal">Non</button>
                                                        <button type="submit" class="btn btn-success" >Oui</button>
                                                    </div>
                                                </form>
                                            </div>
                                        </div>
                                    </div>
                                </td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                        </div>
                </div>
            </div>
        </div>
    </div>
    <div class="modal fade"  data-backdrop="static" data-keyboard="false"  id="modal_add_table" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
        <div class="modal-dialog modal-lg" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h4 class="modal-title" id="myModalLabel0">Ajouter une table</h4>
                </div>
                <form method="POST" action="" class="form_add_table">
                    <div class="modal-body">
                        <label>Nom de la table</label>
                        <input id="new_table_name" type="text" name="new_table_name" class="form-control" placeholder="Nom de la table">
                        <a class="btn btn-primary btn-sm btn-add-field-in-tab noShow marginTop20"><i class="glyphicon glyphicon-plus-sign"></i> Ajouter un champs</a>
                        <table class="table table-bordered table-responsive marginTop20 noShow" id="tab_add_field">
                            <thead>
                            <th>
                                Nom
                            </th>
                            <th>
                                Type
                            </th>
                            <th>
                                Taille
                            </th>
                            <th>
                                Défaut
                            </th>
                            <th>
                                Null
                            </th>
                            <th>
                                Index
                            </th>
                            <th>
                                A_I
                            </th>
                            </thead>
                            <tbody>
                            <tr>
                                <td>
                                    <input type="text" class="form-control" name="field_name"/>
                                </td>
                                <td>
                                    <input type="text" class="form-control" name="field_type" placeholder="INT, VARCHAR, FLOAT..."/>
                                </td>
                                <td>
                                    <input type="text" class="form-control" name="field_size"/>
                                </td>
                                <td>
                                    <select name="select_default">
                                        <option selected>Aucune</option>
                                        <option value="def">Tel que défini : </option>
                                        <option value="NULL">NULL</option>
                                        <option value="CURRENT_TIMESTAMP">CURRENT_TIMESTAMP</option>
                                    </select>
                                    <input type="text" class="form-control input-sm noShow marginTop20" name="default"/>
                                </td>
                                <td>
                                    <div class="checkbox">
                                        <label>
                                            <input type="checkbox">
                                        </label>
                                    </div>
                                </td>
                                <td>
                                    <select name="select_default">
                                        <option selected>---</option>
                                        <option value="PRIMARY">PRIMARY</option>
                                        <option value="UNIQUE">UNIQUE</option>
                                        <option value="INDEX">INDEX</option>
                                        <option value="FULLTEXT">FULLTEXT</option>
                                    </select>
                                </td>
                                <td>
                                    <div class="checkbox">
                                        <label>
                                            <input type="checkbox">
                                        </label>
                                    </div>
                                </td>
                            </tr>
                            </tbody>
                        </table>
                        <input type="hidden" name="db_name" value="{{ dbname }}">
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-default" data-dismiss="modal">Fermer</button>
                        <button type="submit" class="btn btn-success">Valider</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
    <div class="modal fade"  data-backdrop="static" data-keyboard="false"  id="modal_rename_db" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h4 class="modal-title" id="myModalLabel1">Renommer la base <span class="text-info">{{ dbname }}</span></h4>
                </div>
                <form method="POST" action="" class="form_rename_db">
                    <div class="modal-body">
                        <label>Nouveau nom pour la base</label>
                        <input type="text" name="new_db_name" class="form-control" placeholder="Nouveau nom de base">
                        <input type="hidden" name="db_name" value="{{ dbname }}">
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-default" data-dismiss="modal">Fermer</button>
                        <button type="submit" class="btn btn-success">Valider</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
    <div class="modal fade"  data-backdrop="static" data-keyboard="false"  id="modal_info" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h4 class="modal-title" id="myModalLabel2">Résultat</h4>
                </div>
                <div class="modal-body">
                    ...
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default" data-dismiss="modal">Fermer</button>
                </div>
            </div>
        </div>
    </div>
    <div class="modal fade"  data-backdrop="static" data-keyboard="false"  id="modal_drop_db" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h4 class="modal-title" id="myModalLabel3">Confirmation <i class="glyphicon glyphicon-question-sign"></i></h4>
                </div>
                <form method="POST" action="" class="form_delete_db">
                    <div class="modal-body">
                        Vous voulez vraiment suprimer <span class="text-info">{{ dbname }}</span> ?
                    </div>
                    <div class="modal-footer">
                        <input type="hidden" name="db_name_delete" value="{{ dbname }}">
                        <button type="button" class="btn btn-danger" data-dismiss="modal">Non</button>
                        <button type="submit" class="btn btn-success" >Oui</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
{% endblock %}