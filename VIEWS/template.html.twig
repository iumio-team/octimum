<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <title>Octimum</title>
        <link rel="stylesheet" href="PUBLIC/bootstrap-3.3.6-dist/css/bootstrap.min.css">
        <link rel="stylesheet" href="PUBLIC/CSS/simple-sidebar.css">
        <link rel="stylesheet" href="PUBLIC/CSS/style.css">
        <link rel="stylesheet" href="PUBLIC/font-awesome-4.5.0/css/font-awesome.min.css">
        <link rel="stylesheet" href="PUBLIC/CSS/jquery.dataTable.min.css">
        <link rel="stylesheet" href="PUBLIC/JS/jquery-ui.min.css">
    </head>
    <body>
        <div id="wrapper">
            <!-- Sidebar -->
            <div id="sidebar-wrapper">
                <ul class="sidebar-nav">
                    <li class="sidebar-brand">
                        <a href="index.php?run=indexAction">
                            Octimum
                        </a>
                    </li>
                    <li>
                        <a href="index.php?run=indexAction"><i class="glyphicon glyphicon-home"></i> &nbsp;Accueil</a>
                    </li>
                    <li>
                        <a href="index.php?run=formNewDB"><i class="glyphicon glyphicon-plus-sign"></i> &nbsp;Nouvelle base de données</a>
                    </li>
                    {% set i = 0 %}
                    {% for oneDB in alldbname %}
                    <li>
                        <a class="listDB"><i class="fa fa-database"></i> &nbsp;{{ oneDB[0] }}</a>
                        <ul class="noShow listTable">
                            <li>
                                <a href="index.php?run=showDB&value={{ oneDB[0] }}">Accéder à la base</a>

                                {% for oneTable in oneDB[1] %}
                                    <a href="index.php?run=showTableStruct&dbname={{ oneDB[0] }}&tName={{ oneTable }}" ><i class="glyphicon glyphicon-list-alt"></i> &nbsp;{{ oneTable }}</a>
                                {% endfor %}
                            </li>
                        </ul>
                    </li>
                        {% set i = i + 1 %}
                    {% endfor %}
                </ul>
            </div>
            <!-- /#sidebar-wrapper -->
            {% block body %}

            {% endblock %}
        </div>
        <script type="text/javascript" src="PUBLIC/JS/jquery-2.1.4.min.js"></script>
        <script type="text/javascript" src="PUBLIC/JS/index.js"></script>
        <script type="text/javascript" src="PUBLIC/bootstrap-3.3.6-dist/js/bootstrap.min.js"></script>
        <script type="text/javascript" src="PUBLIC/JS/jquery.dataTable.min.js"></script>
        <script type="text/javascript" src="PUBLIC/JS/dataTables.bootstrap.min.js"></script>
        <script type="text/javascript" src="PUBLIC/JS/cellEditable.js"></script>
        <script type="text/javascript" src="PUBLIC/JS/jquery-ui.min.js"></script>
        <script type="text/javascript" src="PUBLIC/JS/jquery.customSelect.min.js"></script>
    </body>
</html>