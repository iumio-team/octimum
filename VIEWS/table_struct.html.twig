                                                                <tr>
                                                                    <th>
                                                                        Nom
                                                                    </th>
                                                                    <th>
                                                                        Type
                                                                    </th>
                                                                    <th>
                                                                        Taille
                                                                    </th>
                                                                    <th>
                                                                        Null
                                                                    </th>
                                                                    <th>
                                                                        Default
                                                                    </th>
                                                                </tr>
                                                                </thead>
                                                                <tbody>
                                                                <tr>
                                                                    <td>
                                                                        {% if struct['COLUMN_KEY'] == "PRI" %}
