                                    <td>
                                        {{ struct['COLUMN_TYPE'] }}
                                        {% set type = struct['COLUMN_TYPE']|split('(') %}
                                    </td>
                                    <td>
                                        {% if struct['IS_NULLABLE'] == "YES" %}
                                            Oui
                                        {% else %}
                                            Non
                                        {% endif %}
                                    </td>
                                    <td>
                                        {{ struct['EXTRA'] }}
                                    </td>
