{% extends "template.html.twig" %}
{% block body %}
    <nav class="navbar navbar-default navbar-inverse navbar-collapse navbar-md">
        <div class="container-fluid">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle collapsed" data-toggle="collapse"
                        data-target="#bs-example-navbar-collapse-1" aria-expanded="false">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
            </div>
            <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
                <ul class="nav navbar-nav">
                    <li><a href="index.php?run=content_table&dbname={{ dbname }}&t_name={{ t_name }}"><i class="glyphicon glyphicon-list-alt"></i> Afficher</a></li>
                    <li><a href="index.php?run=showTableStruct&dbname={{ dbname }}&tName={{ t_name }}">Structure <span class="sr-only">(current)</span></a></li>
                    <li><a href="#makeQuery"><i class="glyphicon glyphicon-edit"></i> Faire une requête</a></li>
                </ul>
                <ul class="nav navbar-nav navbar-right">
                    <li><a href="#menu-toggle" id="menu-toggle"><i class="glyphicon glyphicon-menu-hamburger"></i></a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>
    <div class="container-fluid">
        <div class="row noShow" id="makeQuery">
            <form id="Query" method="POST" action="" class="form-group">
                <div class="panel panel-info panel-full">

                    <div class="panel-heading">
                        <h3 class="panel-title">Faire une requête</h3>
                    </div>
                    <div class="panel-body">
                <textarea name="query" rows="10" class="form-control">

                </textarea>
                    </div>
                    <div class="panel-footer text-right">
                        <input type="submit" class="btn btn-success">
                        <input type="reset" class="btn btn-danger">
                    </div>

                </div>
            </form>
        </div>
        <div class="row" id="showStruct">
            <div class="panel panel-info panel-full">
                <div class="panel-heading">
                    <h3 class="panel-title">INFORMATION SUR LA TABLE {{ t_name }}</h3>
                </div>
                <div class="panel-body" id="panel_body">
                    <button class="btn btn-success btn-sm btn-add-field"><i class="glyphicon glyphicon-plus-sign"></i>
                        Ajouter un champs
                    </button>
                    <button class="btn btn-danger btn-sm btn-delete-the-table"><i class="glyphicon glyphicon-trash"></i>
                        Supprimer la table
                    </button>
                    <button class="btn btn-primary btn-sm btn-rename-table"><i class="glyphicon glyphicon-edit"></i>
                        Renommer la table
                    </button>
                    <div class="marginTop20">
                    <table class="table table-striped table-bordered table-responsive tableaux">
                        <thead>
                        <tr>
                            <th>Nom</th>
                            <th>Type</th>
                            <th>NULL</th>
                            <th>EXTRA</th>
                            <th>DEFAULT</th>
                            <th>Modifier</th>
                            <th>Supprimer</th>
                        </tr>
                        </thead>
                        <tbody>
                        {% for struct in tables_struct %}
                            <tr>
                                <td>
                                    <strong>{{ struct['COLUMN_NAME'] }}</strong>
                                    {% if struct['COLUMN_KEY'] == "PRI" %}
                                        (<i class="fa fa-key"></i>Clé primaire)
                                    {% elseif struct['COLUMN_KEY'] == "MUL" %}
                                        (#Clé étrangère)
                                    {% endif %}
                                </td>
                                <td>
                                    {{ struct['COLUMN_TYPE'] }}
                                </td>
                                <td>
                                    {% if struct['IS_NULLABLE'] == "YES" %}
                                        Oui
                                    {% else %}
                                        Non
                                    {% endif %}
                                </td>
                                <td>
                                    {{ struct['EXTRA'] }}
                                </td>
                                <td>
                                    {{ struct['COLUMN_DEFAULT'] }}
                                </td>
                                <td>
                                    <span class="btn btn-primary full-width btn-edit-field" name="{{ struct['COLUMN_NAME'] }}"><i class="glyphicon glyphicon-edit"></i></span>
                                    <div class="modal fade"  data-backdrop="static" data-keyboard="false"  id="modal_edit_field{{ struct['COLUMN_NAME'] }}" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
                                        <div class="modal-dialog modal-lg" role="document">
                                            <div class="modal-content">
                                                <div class="modal-header">
                                                    <h4 class="modal-title" id="myModalLabel1">Editer le champs <span class="text-info"></span></h4>
                                                </div>
                                                <form method="POST" action="" class="form_edit_field">
                                                    <div class="modal-body">
                                                        {% if struct['COLUMN_KEY'] == "PRI" %}
                                                            <input type="text" name="new_field_name" class="form-control" value="{{ struct['COLUMN_NAME'] }}" readonly>
                                                        {% else %}
                                                            <input type="text" name="new_field_name" class="form-control" value="{{ struct['COLUMN_NAME'] }}">
                                                        {% endif %}
                                                        <input type="text" name="new_field_type" class="form-control" value="{{ struct['COLUMN_TYPE'] }}">
                                                        {% if struct['IS_NULLABLE'] == "YES" %}
                                                            <input type="text" name="new_table_name" class="form-control" value="Oui">
                                                        {% else %}
                                                            <input type="text" name="new_table_name" class="form-control" value="Non">
                                                        {% endif %}
                                                        <input type="text" name="new_table_name" class="form-control" value="{{ struct['COLUMN_DEFAULT'] }}">
                                                        <input type="hidden" name="name_db" value="{{ dbname }}">
                                                        <input type="hidden" name="tale_name" value="{{ t_name }}">
                                                    </div>
                                                    <div class="modal-footer">
                                                        <button type="button" class="btn btn-default" data-dismiss="modal">Fermer</button>
                                                        <button type="submit" class="btn btn-success">Valider</button>
                                                    </div>
                                                </form>
                                            </div>
                                        </div>
                                    </div>
                                </td>
                                <td>
                                    <span class="btn btn-danger full-width"><i class="glyphicon glyphicon-trash"></i> </span>
                                </td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                        </div>
                </div>
            </div>
        </div>
        <div class="modal fade"  data-backdrop="static" data-keyboard="false"  id="modal_rename_table" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
            <div class="modal-dialog" role="document">
                <div class="modal-content">
                    <div class="modal-header">
                        <h4 class="modal-title" id="myModalLabel1">Renommer la table <span class="text-info">{{ t_name }}</span></h4>
                    </div>
                    <form method="POST" action="" class="form_rename_table">
                        <div class="modal-body">
                            <label>Nouveau nom pour la table</label>
                            <input type="text" name="new_table_name" class="form-control" placeholder="Nouveau nom de table">
                            <input type="hidden" name="name_db" value="{{ dbname }}">
                            <input type="hidden" name="tale_name" value="{{ t_name }}">
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-default" data-dismiss="modal">Fermer</button>
                            <button type="submit" class="btn btn-success">Valider</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
        <div class="modal fade" data-backdrop="static" data-keyboard="false" id="modal_info" tabindex="-1" role="dialog"
             aria-labelledby="myModalLabel">
            <div class="modal-dialog" role="document">
                <div class="modal-content">
                    <div class="modal-header">
                        <h4 class="modal-title" id="myModalLabel2">Résultat</h4>
                    </div>
                    <div class="modal-body">
                        ...
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-default" data-dismiss="modal">Fermer</button>
                    </div>
                </div>
            </div>
        </div>
        <div class="modal fade" data-backdrop="static" data-keyboard="false" id="modal_delete_table" tabindex="-1"
             role="dialog" aria-labelledby="myModalLabel">
            <div class="modal-dialog" role="document">
                <div class="modal-content">
                    <div class="modal-header">
                        <h4 class="modal-title myModalLabel">Confirmation <i
                                    class="glyphicon glyphicon-question-sign"></i></h4>
                    </div>
                    <form method="POST" action="" class="form_delete_table">
                        <div class="modal-body">
                            Vous voulez vraiment suprimer <span class="text-info">{{ t_name }}</span> ?
                        </div>
                        <div class="modal-footer">
                            <input type="hidden" name="table_name_delete" value="{{ t_name }}">
                            <input type="hidden" name="name_db" value="{{ dbname }}">
                            <button type="button" class="btn btn-danger" data-dismiss="modal">Non</button>
                            <button type="submit" class="btn btn-success">Oui</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
{% endblock %}